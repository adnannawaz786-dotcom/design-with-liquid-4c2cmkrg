# Environment Variables for design-with-liquid

# Application
VITE_APP_NAME=design-with-liquid
VITE_APP_VERSION=1.0.0
VITE_APP_DESCRIPTION=Liquid Glass Analytics Dashboard

# Development
NODE_ENV=development
VITE_DEV_MODE=true

# API Configuration
VITE_API_URL=http://localhost:3001/api
VITE_API_TIMEOUT=10000

# Theme Configuration
VITE_DEFAULT_THEME=dark
VITE_ENABLE_THEME_TOGGLE=false

# Animation Settings
VITE_ENABLE_ANIMATIONS=true
VITE_REDUCE_MOTION=false
VITE_ANIMATION_DURATION=300

# Glass Effect Settings
VITE_GLASS_BLUR_INTENSITY=12
VITE_GLASS_OPACITY=0.1
VITE_BORDER_OPACITY=0.2

# Bokeh Animation
VITE_BOKEH_COUNT=15
VITE_BOKEH_SPEED=0.5
VITE_ENABLE_BOKEH=true

# Performance
VITE_ENABLE_PWA=false
VITE_ENABLE_SERVICE_WORKER=false

# Analytics (placeholder for future use)
VITE_ANALYTICS_ID=
VITE_ENABLE_ANALYTICS=false

# Debug
VITE_DEBUG_MODE=false
VITE_SHOW_PERFORMANCE_METRICS=false